    <script>
        function showLoading() {
            // Создаем страницу загрузки
            document.body.innerHTML = `
                <div style="
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    height: 100vh;
                    background: linear-gradient(45deg, #1a2a6c, #b21f1f, #fdbb2d);
                    color: white;
                    font-family: 'Montserrat', sans-serif;
                    text-align: center;
                ">
                    <div>
                        <h1 style="font-size: 3rem; margin-bottom: 20px; animation: pulse 2s infinite;">Loading…</h1>
                        <p style="font-size: 2rem; font-family: 'Dancing Script', cursive;">реальность.</p>
                    </div>
                </div>
                <style>
                    @keyframes pulse {
                        0% { opacity: 0.5; }
                        50% { opacity: 1; }
                        100% { opacity: 0.5; }
                    }
                </style>
            `;
            
            // Через 5 секунд возвращаем на главную
            setTimeout(() => {
                location.reload();
            }, 5000);
        }
    </script>
